<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/name_view"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="17dp"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="17dp"
            android:layout_marginBottom="17dp"
            android:text="Name"
            android:textColor="@color/black"
            android:textSize="23dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/name"
            android:layout_width="260dp"
            android:layout_height="40dp"
            android:layout_alignBottom="@+id/name_view"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="23dp"
            android:layout_marginEnd="23dp"
            android:layout_marginBottom="-6dp"
            android:layout_toEndOf="@+id/name_view"
            android:digits="qwertyuiopasdfghjklzxcvbnm"
            android:maxLength="255"
            app:layout_constraintBottom_toBottomOf="@+id/name_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/name_view"
            app:layout_constraintTop_toTopOf="@+id/name_view"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/age_view"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_below="@+id/name_view"
            android:layout_marginStart="17dp"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="17dp"
            android:layout_marginBottom="17dp"
            android:text="Age"
            android:textColor="@color/black"
            android:textSize="23dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/name_view"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/age"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_alignBottom="@+id/age_view"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="23dp"
            android:layout_marginEnd="170dp"
            android:layout_marginBottom="-6dp"
            android:layout_toEndOf="@+id/age_view"
            android:maxLength="2"
            android:numeric="integer"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/age_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.123"
            app:layout_constraintStart_toEndOf="@+id/age_view"
            app:layout_constraintTop_toTopOf="@+id/age_view"
            app:layout_constraintVertical_bias="1.0" />


        <TextView
            android:id="@+id/seekBar_view"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@+id/age_view"
            android:layout_marginStart="17dp"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="17dp"
            android:layout_marginBottom="17dp"
            android:text=""
            android:textColor="@color/black"
            android:textSize="23dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/age_view"
            tools:ignore="MissingConstraints" />


        <TextView
            android:id="@+id/textView22"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@+id/age_view"
            android:layout_marginStart="17dp"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="17dp"
            android:layout_marginBottom="17dp"
            android:textColor="@color/black"
            android:textSize="23dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/age_view"
            tools:ignore="MissingConstraints"
            tools:text="Ur desired salary in dollar " />

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="260dp"
            android:layout_height="40dp"
            android:layout_alignBottom="@+id/seekBar_view"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="76dp"
            android:layout_marginEnd="74dp"
            android:layout_marginBottom="-24dp"
            android:max="10000"
            android:min="100"
            app:layout_constraintBottom_toBottomOf="@+id/seekBar_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/seekBar_view"
            app:layout_constraintTop_toTopOf="@+id/seekBar_view"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/seekBar_view"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="17dp"
            android:layout_marginTop="47dp"
            android:layout_marginEnd="17dp"
            android:text="What do all elements of an array have in common?"
            android:textColor="@color/black"
            android:textSize="23dp"
            app:layout_constraintTop_toBottomOf="@+id/textView22" />

        <RadioGroup
            android:id="@+id/group_zero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="17dp"
            android:layout_marginEnd="17dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="20dp">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_margin="15dp"
                android:text="Their names"
                android:textSize="23dp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_margin="15dp"
                android:text="Their size"
                android:textSize="23dp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_margin="15dp"
                android:text="Their memory address"
                android:textSize="23dp" />

            <RadioButton
                android:id="@+id/group_zero_02"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_margin="15dp"
                android:text="Their data type+"
                android:textSize="23dp" />
        </RadioGroup>

        <TextView
            android:id="@+id/textView_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/group_zero"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="17dp"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="17dp"
            android:text="What this --Ñ…; ?"
            android:textColor="@color/black"
            android:textSize="23dp"
            app:layout_constraintTop_toBottomOf="@+id/group_zero" />

        <RadioGroup
            android:id="@+id/group_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_one"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="17dp"
            android:layout_marginEnd="17dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/textView_one"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="20dp">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:text="prefix increment"
                android:textSize="23dp" />

            <RadioButton
                android:id="@+id/group_one_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:text="prefix decrement+"
                android:textSize="23dp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:text="postfix decrement"
                android:textSize="23dp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:text="postfix increment"
                android:textSize="23dp" />
        </RadioGroup>

        <TextView
            android:id="@+id/textView_two"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@+id/group_one"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="17dp"
            android:layout_marginRight="17dp"
            android:text="@string/what_is_the_result_of_this_code_npublic_static_void_main_string_args_nint_sum_0_nfor_int_i_1_i_3_sum_i_nsystem_out_println_sum_n"

            android:textColor="@color/black"
            android:textSize="18dp"
            app:layout_constraintTop_toBottomOf="@+id/group_one" />

        <RadioGroup
            android:id="@+id/group_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_two"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/textView_two"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="20dp">

            <RadioButton
                android:id="@+id/group_two_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:text="6+"
                android:textSize="23dp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:text="5"
                android:textSize="23dp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:text="3"
                android:textSize="23dp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:text="4"
                android:textSize="23dp" />
        </RadioGroup>

        <TextView
            android:id="@+id/textView_tree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/group_two"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="17dp"
            android:layout_marginRight="17dp"
            android:text="@string/what_is_the_result_of_this_code_n_public_static_void_main_string_args_nsystem_out_println_1_0_0_n"
            android:textColor="@color/black"
            android:textSize="23dp"
            app:layout_constraintTop_toBottomOf="@+id/group_two" />

        <RadioGroup
            android:id="@+id/group_tree"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_below="@+id/textView_tree"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/textView_two"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="20dp">

            <RadioButton
                android:id="@+id/group_tree_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="15dp"
                android:text="Infinity+"
                android:textSize="23dp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="15dp"
                android:text="NAN"
                android:textSize="23dp" />

        </RadioGroup>

        <TextView
            android:id="@+id/textView_four"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/group_tree"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="17dp"
            android:layout_marginRight="17dp"
            android:text="Java i`ts object-oriented language?"
            android:textColor="@color/black"
            android:textSize="23dp"
            app:layout_constraintTop_toBottomOf="@+id/group_tree" />

        <RadioGroup
            android:id="@+id/group_four"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_below="@+id/textView_four"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="17dp"
            android:layout_marginEnd="17dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/textView_tree"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="20dp">

            <RadioButton
                android:id="@+id/group_four_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="15dp"
                android:text="Yes"
                android:textSize="23dp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="15dp"
                android:text="No"
                android:textSize="23dp" />

        </RadioGroup>

        <CheckBox
            android:id="@+id/check_experience"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/group_four"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="17dp"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="17dp"
            android:text="Work experience from 2 years"
            android:textSize="23dp"
            app:layout_constraintTop_toBottomOf="@+id/group_four" />

        <CheckBox
            android:id="@+id/check_team_skills"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/check_experience"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="17dp"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="17dp"
            android:text="Team development skills"
            android:textSize="23dp"
            app:layout_constraintTop_toBottomOf="@+id/check_experience" />

        <CheckBox
            android:id="@+id/check_trips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/check_team_skills"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="17dp"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="17dp"
            android:text="Readiness for business trips"
            android:textSize="23dp"
            app:layout_constraintTop_toBottomOf="@+id/check_team_skills" />


        <Button
            android:id="@+id/buttonCounter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/check_trips"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="17dp"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="17dp"
            android:text="pass the test"
            app:layout_constraintTop_toBottomOf="@+id/check_trips" />

    </RelativeLayout>
</ScrollView>
